<h2>Sign Up</h2>

<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
		<div class="flash alert">
			<p><strong>Oops.</strong> Please correct the following errors:</p>
			<ul>
				<% for message in @user.errors.full_messages %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<p>
		<%= f.label :email %><br>
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :password %><br>
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.label :password_confirmation %><br>
		<%= f.password_field :password_confirmation %>
	</p>
	<p><%= f.submit 'Create', :type => 'submit' %></p>
<% end %>
